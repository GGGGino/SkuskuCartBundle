<style>
    .cartPreview{
        display: inline-block;
        position: relative;
    }
    #skusku-cart-button{
        display: inline-block;
        padding: 10px 20px;
        margin: 10px;
    }
    .cartPreview .details{
        -webkit-transition: all .5s; /* Safari */
        transition: all .5s;
        max-height: 0;
        overflow: hidden;
        position: absolute;
        z-index: 20;
        background: #FFFFFF;
        top: 100%;
    }
    .cartPreview:hover .details{
        -webkit-transition: all .5s; /* Safari */
        transition: all .5s;
        max-height: 500px;
        border: 1px solid grey;
        padding: 10px 20px;
    }
</style>
<div class="cartPreview">
    <div class="right aligned column">
        <div id="skusku-cart-button" class="ui circular cart button">
            <i class="cart icon"></i>
            <span id="skusku-cart-total">{{ cart.customer.username }}</span>
        </div>
        <div class="details">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">product</th>
                    <th scope="col">price</th>
                    <th scope="col">quantity</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for product in cart.products %}
                    <tr>
                        <th>{{ product.id }}</th>
                        <td>{{ product.product.getTitle() }}</td>
                        <td>{{ product.product.getPrice() }}â‚¬</td>
                        <td>{{ product.quantity }}</td>
                        <td><i data-idcartproducturl="{{ path('remove_item_from_cart', {'product': product.id}) }}" class="fa fa-trash"></i></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('cart_page') }}" class="btn">Cart</a>
        </div>
    </div>
</div>
<script>
    jQuery('.cartPreview .fa-trash').on('click', function(e) {
        var $button = $(this);
        $.get( $button.data('idcartproducturl'), function( data ) {
            $button.closest('tr').fadeOut();
        });
    });
</script>